<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Image Profle</title>
    <%- include("partials/head") -%>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand" href="/">
            <img src="" style="height: 30px" class="d-inline-block align-top"> Calzados Drift
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/add"><i class="fas fa-cart-arrow-down"></i> <span id="thisone"></span> </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">

                <div class="card animated fadeInDown">
                    <img src="<%= image.path %>" class="card-img-top" alt="<%= image.filename %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= image.product %>
                        </h5>
                        <p class="card-text">
                            <%= image.price %>
                        </p>
                        <p>
                            <%= format(image.created_at) %>
                        </p>
                        <a href="/image/<%= image._id%>/delete" class="btn btn-danger btn-block">
                            Delete Image
                        </a>
                        <form action="" method="post" enctype="multipart/form-data">
                            <button class="btn btn-success btn-block" id="press">
                                Add
                            </button>
                        </form>
                        <button class="btn btn-success btn-block" id="presse">
                            Add
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script>


        document.getElementById("presse").addEventListener("click", function () {
            var foo = document.getElementById('thisone').innerHTML;
              foo++;
              document.getElementById('thisone').innerHTML = foo;
        })
    
    
    
      
    </script>

</body>




</html>

